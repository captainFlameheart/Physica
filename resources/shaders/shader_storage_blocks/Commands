struct Dispatch_Command
{
	uint work_group_count_x;
	uint work_group_count_y;
	uint work_group_count_z;
	uint pad;
};

struct Draw_Arrays_Command {
    uint count;
    uint instance_count;
    uint first;
    uint base_instance;
};

layout(std430, binding = COMMAND_BINDING) restrict READ_ONLY_PLACEHOLDER
buffer Commands
{
	Dispatch_Command dispatch_commands[DISPATCH_COMMAND_COUNT];
	Draw_Arrays_Command draw_arrays_commands[DRAW_ARRAYS_COMMAND_COUNT];
} commands;
